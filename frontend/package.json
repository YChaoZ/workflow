{
  "name": "workflow-frontend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "工作流系统前端 - 基于 Vue 3 + Element Plus + TypeScript",
  "scripts": {
    "dev": "vite --host",
    "build": "vue-tsc -b && vite build",
    "build:dev": "vue-tsc -b && vite build --mode development",
    "build:prod": "vue-tsc -b && vite build --mode production",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore"
  },
  "dependencies": {
    "vue": "^3.5.22",
    "vue-router": "^4.2.5",
    "pinia": "^2.1.7",
    "element-plus": "^2.4.4",
    "@element-plus/icons-vue": "^2.3.1",
    "axios": "^1.6.2",
    "bpmn-js": "^17.0.2",
    "bpmn-js-properties-panel": "^5.0.0",
    "diagram-js": "^12.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/tsconfig": "^0.5.0",
    "typescript": "~5.3.0",
    "vite": "^5.0.0",
    "vue-tsc": "^1.8.0",
    "sass": "^1.69.5"
  }
}
