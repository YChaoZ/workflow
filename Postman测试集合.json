              "raw": "{{baseUrl}}/api/task/list?assignee=admin&taskStatus=done&pageNum=1&pageSize=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "task", "list"],
              "query": [
                {
                  "key": "assignee",
                  "value": "admin"
                },
                {
                  "key": "taskStatus",
                  "value": "done"
                },
                {
                  "key": "pageNum",
                  "value": "1"
                },
                {
                  "key": "pageSize",
                  "value": "10"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "查询单个任务",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/task/{{taskId}}",
              "host": ["{{baseUrl}}"],
