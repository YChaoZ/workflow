              "raw": "{\n  \"taskId\": \"{{taskId}}\",\n  \"assignee\": \"admin\",\n  \"comment\": \"同意\",\n  \"variables\": {\n    \"approved\": true,\n    \"approveComment\": \"审批通过\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/task/complete",
              "host": ["{{baseUrl}}"],
              "path": ["api", "task", "complete"]
            }
          },
          "response": []
        },
        {
          "name": "认领任务",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/task/{{taskId}}/claim?userId=admin",
              "host": ["{{baseUrl}}"],
              "path": ["api", "task", "{{taskId}}", "claim"],
              "query": [
                {
                  "key": "userId",
                  "value": "admin"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "委派任务",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/task/{{taskId}}/delegate?delegateUserId=zhangsan",
              "host": ["{{baseUrl}}"],
              "path": ["api", "task", "{{taskId}}", "delegate"],
              "query": [
                {
                  "key": "delegateUserId",
                  "value": "zhangsan"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "转办任务",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/task/{{taskId}}/transfer?targetUserId=lisi",
              "host": ["{{baseUrl}}"],
              "path": ["api", "task", "{{taskId}}", "transfer"],
              "query": [
                {
                  "key": "targetUserId",
                  "value": "lisi"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "4. 系统监控",
      "item": [
        {
          "name": "健康检查",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/process/health",
